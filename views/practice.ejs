            </ul>
        </div>
        <div id="btn-out">
            <a href="/users/sign-out">Sign Out</a>
        </div>
        <div id="rights">
            @Everlast Notes, All Rights Reserved
        </div>

    </div>
    <div id="data">
        <div class="toolbar">
        <div>Practice Problems</div>
        <select id="platformFilter" type="text"  name="lang" class="form-container" style="width:20%;background: transparent;" required>
            <option disabled><i class="fas fa-filter">Select Topic</i></option>
            <option value="all" selected>All Topics</option>
            <option value="Recursion">Recursion</option>
            <option value="Linked List">Linked List</option>
            <option value="Stack">Stack</option>
            <option value="Queue">Queue</option>
            <option value="Tree">Tree</option>
            <option value="Binary Tree">Binary Tree</option>
            <option value="BST">BST</option>
            <option value="Maps">Maps</option>
            <option value="OOPs">OOPs</option>
            <option value="Prority Queue">Prority Queue</option>
            <option value="Trie">Trie</option>
            <option value="DP">DP</option>
            <option value="Graph">Graph</option>
            <option value="Backtracking">Backtracking</option>
            <option value="Array">Array</option>
            <option value="String">String</option>
            <option value="Bit Manipulation">Bit Manipulation</option>
            <option value="Pointers">Pointers</option>
            <option value="Mathematical">Mathematical</option>
            <option value="Others">Others</option>
        </select>
        </div>
        <div id="recents">
            <div class="header">
                <div style="width:10%">Platform</div>
                <div style="width:40%;text-align: left;">Name of Problem</div>
                <div style="width:20%;" onclick="sortByDate()" data-toggle="tooltip" data-placement="top" title="Order by Date">Posted On <i class="fa-solid fa-sort"></i></div>
                <div style="width:17%">Problem Category</div>
                <div style="width:13%"></div>
            </div>
            <div id="fetchedList">
                <% if(!problems.length){%>
                    <div class="empty-state">
                        <div class="empty-state__content animate__animated animate__pulse">
                          <div class="empty-state__icon">
                            <img src="/images/search-result-not-found-2130361-1800925.png" alt="no-result-found">
                          </div>
                          <div class="empty-state__message">No Problems Suggestion available now :(</div>
                          <div class="empty-state__help">
                            Start Participating in Contests from 'Contest' section or visit websites from the quick links on right side.
                          </div>
                        </div>
                    </div>
                <%}%>
                <% for(let problem of problems){%>
                    <div class="item animate__animated animate__fadeInUp" data-topic="<%= problem.topic%>">
                    <div style="width:10%;box-sizing: border-box;" id="userlistdp">
                        <a><img src="/images/platforms/<%= problem.website%>.png"></img></a>
                    </div>
                    <div style="width:40%;text-align: left;" class="question"><a href="<%= problem.link%>" target="_blank" data-toggle="tooltip" data-placement="top" title="Practice Online"><%= problem.name%></a></div>
                    <div style="width:20%"><%= new Date(problem.createdAt).toDateString()%></div>
                    <div style="width:17%;background-color:#1570FF;padding:0.4rem 0rem;border-radius:10px;"><%= problem.topic%></div>
                    <div style="width:13%; display: flex;justify-content: space-evenly;">
                        <a id="tool" href="<%= problem.link%>" target="_blank" style="color: rgba(214, 214, 214, 1);" data-toggle="tooltip" data-placement="top" title="Practice Online"><i class="fa-regular fa-keyboard"></i></a>
                        <a id="tool" href="/practice/MarkAsDone/<%=problem.id%>" style="color: rgba(214, 214, 214, 1);" data-toggle="tooltip" data-placement="top" title="Add to Problems [Mark as Done]"><i class="fa-solid fa-clipboard-check"></i></a>
                    </div>
                    </div>
                <%}%>
        </div>        		
</div>
</div>
<script src="/js/practice.js"></script>
