<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<div id="main-body">
    <div id="menu">
<div id="list-menu">

<ul class="vertical-list">
    <li style="margin-top:0rem !important;"><a href="/">Dashboard</a></li>
    <li><a href="#" >Problems</a></li>
    <li class="dropdown"><a href="#">Categories</a>
    <div class="dropdown-content">
    <a href="#">Recursion</a>
    <a href="#">Linked List</a>
    <a href="#">Stack</a>
    <a href="#">Queue</a>
    <a href="#">Tree</a>
    <a href="#">Binary Tree</a>
    <a href="#">BST</a>
    <a href="#">Maps</a>
    <a href="#">OOPs</a>
    <a href="#">Prority Queue</a>
    <a href="#">Trie</a>
    <a href="#">DP</a>
    <a href="#">Graph</a>
    <a href="#">Backtracking</a>
    <a href="#">Array</a>
