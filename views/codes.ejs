            <textarea type="text" name="description" placeholder="Learnings or any other Code related information......" class="form-container" style ="height:8rem;" required></textarea>
            <textarea type="text" name="code" placeholder="Paste here Code Snippet..." class="form-container" style ="height:8rem;" required></textarea>
            <div id="lastrow">
            <select type="text"  name="lang" class="form-container" style="width:20%" required>
                <option disabled selected>Select Code language</option>
