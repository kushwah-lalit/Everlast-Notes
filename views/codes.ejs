                <option value="verilog">Verilog</option>
                <option value="vhdl">VHDL</option>
                <option value="vim">vim</option>
            </select>
            <button type="submit" class="submit" style="width:15%;margin-left:10%;">Add Code</button>
        </div>
        </form>
        <%}%>
        <div class="item">
            <div>Code Snippets</div>
            <select id="sel" type="text"  name="lang" class="form-container" style="width:20%;background: transparent;" required>
                <option disabled selected><i class="fas fa-filter">Sort By</i></option>
                <option value="desc" ><a href="#" >Latest First</a></option>
                <option value="asc" ><a href="#" >Latest Last</a></option>
            </select>
        </div>
        <% if(!codes.length) {%>
            <div class="empty-state animate__animated animate__pulse">
                <div class="empty-state__content">
                  <div class="empty-state__icon">
                    <img src="/images/search-result-not-found-2130361-1800925.png" alt="no-result-found">
                  </div>
                  <div class="empty-state__message">No Code Snippets Added.</div>
                  <div class="empty-state__help">
                    Start maintaining your codes on Everlast by using above form.
                  </div>
                </div>
            </div>
        <%}%>
        <div id="listitems" class="top-to-bottom">
            <% for(let code of codes){%>
                <div class="brick animate__animated animate__fadeInUp">
                    <div id="name"><a href="/code/view/<%= code.id%>" data-toggle="tooltip" data-placement="top" title="View Code"><%= code.name%></a></div>
                    <div id="tags">
                        <div id="tag" style="background-color:#F97600;"><%= code.lang%></div>
                        <div id="tools">
                            <a href="/code/update/<%= code.id%>" data-toggle="tooltip" data-placement="top" title="Update Code Details"><i class="fa-solid fa-pencil"></i></a>
                            <a href="/code/delete/<%= code.id%>" id="delete" onclick="alert('You deleted a Code Snippet!')" data-toggle="tooltip" data-placement="top" title="Delete Code"><i class="far fa-trash-alt"></i></a>
                        </div>
                    </div>
                    
                </div>
            <%}%>
