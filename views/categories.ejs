            <% for(let problem of problems){%>
                <div class="brick">
                    <div id="name"><a href="/problem/view/<%= problem.id%>"><%= problem.name%></a></div>
                    <div id="tags">
                        <div id="tag" style="background-color:#F97600;"><%= problem.lang%></div>
                        <div id="tag" style="background-color:#1570FF;"><%= problem.topic%></div>
                        <div id="tag" style="background-color:#389810;"><%= problem.website%></div>
                    </div>
                    <div id="tools">
                        <a href="<%= problem.link%>" target="_blank" style="color:#6BAAED"><i class="fas fa-laptop-code"></i></a>
                        <a href="/problem/update/<%= problem.id%>"><i class="fas fa-pen-nib"></i></a>
                        <a href="/problem/delete/<%= problem.id%>" id="delete"><i class="far fa-trash-alt"></i></a>
                    </div>
                </div>
